  body
    style.
      .demo-layout-waterfall .mdl-layout__header-row .mdl-navigation__link:last-of-type  {
        padding-right: 0;
      }
    .demo-layout-waterfall.mdl-layout.mdl-js-layout
      header.mdl-layout__header.mdl-layout__header--waterfall
        // Top row, always visible
        .mdl-layout__header-row
          // Title
          span.mdl-layout-title StarkMap
          .mdl-layout-spacer
          .mdl-textfield.mdl-js-textfield.mdl-textfield--expandable.mdl-textfield--floating-label.mdl-textfield--align-right
            label.mdl-button.mdl-js-button.mdl-button--icon(for='waterfall-exp')
              i.material-icons search
            .mdl-textfield__expandable-holder
              input#waterfall-exp.mdl-textfield__input(type='text', name='sample')
        // Bottom row, not visible on scroll
        .mdl-layout__header-row
          .mdl-layout-spacer
          // Navigation
          nav.mdl-navigation
            a.mdl-navigation__link(href='/') Mapa
            a.mdl-navigation__link(href='/recursos_fisicos_form') Recursos Fisicos
            a.mdl-navigation__link(href='/sedes_form') Sedes
            a.mdl-navigation__link(href='/bloques/form') Bloques
            a.mdl-navigation__link(href='/tipos_recursos_fisicos_form') Tipos de recurso
            a.mdl-navigation__link(href='#') Puntos de interes
      .mdl-layout__drawer
        span.mdl-layout-title StarkMap
        nav.mdl-navigation
          a.mdl-navigation__link(href='/') Mapa
          a.mdl-navigation__link(href='/recursos_fisicos_form') Recursos Fisicos
          a.mdl-navigation__link(href='/bloques/form') Bloques
          a.mdl-navigation__link(href='/sedes_form') Sedes
          a.mdl-navigation__link(href='/tipos_recursos_fisicos_form') Tipos de recurso
          a.mdl-navigation__link(href='#') Puntos de interes
      main.mdl-layout__content
        .page-content
          // Your content goes here
          block content
      
